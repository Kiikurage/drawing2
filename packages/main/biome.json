{
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "formatWithErrors": true,
        "lineEnding": "lf"
    },
    "linter": {
        "rules": {
            "complexity": {
                "noBannedTypes": "off",
                "noStaticOnlyClass": "off",
                "noUselessLoneBlockStatements": "off",
                "noUselessSwitchCase": "off"
            },
            "a11y": {
                "noSvgWithoutTitle": "off",
                "useKeyWithClickEvents": "off",
                "noAutofocus": "off"
            },
            "style": {
                "noParameterAssign": "off",
                "noUselessElse": "off"
            },
            "suspicious": {
                "noArrayIndexKey": "off",
                "noAssignInExpressions": "off"
            }
        }
    }
}
