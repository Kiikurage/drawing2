{
	"formatter": {
		"indentStyle": "space",
		"indentWidth": 4
	},
	"linter": {
		"rules": {
			"complexity": {
				"noBannedTypes": "off",
				"noStaticOnlyClass": "off"
			},
			"a11y": {
				"noSvgWithoutTitle": "off",
				"useKeyWithClickEvents": "off",
				"noAutofocus": "off"
			},
			"style": {
				"noParameterAssign": "off",
				"noUselessElse": "off"
			},
			"suspicious": {
				"noAssignInExpressions": "off"
			}
		}
	},
	"formatter": {
		"formatWithErrors": true
	}
}
